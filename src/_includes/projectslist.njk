<ul class="projectlist">
	{%- for project in projectlist %}
		<li class="projectlist-item">
			<div class="projectlist-text-content">
				<h3 class="projectlist-title">
					{% if project.data.iconLabel %}
						{% icon project.data.iconLabel %}
					{% endif %}
					<a href="{{ project.url }}">
						{{ project.data.title or project.url }}
					</a>
				</h3>
				<p class="projectlist-description">
					{{ project.data.description }}
				</p>
				<div class="projectlist-metadata">
					{% if project.data.iconUrl %}
						<div>
							<span>Repository:</span>
							<a href="{{ project.data.iconUrl }}" target="_blank" rel="noopener noreferrer">{{
						project.data.repoLabel or "Repository" }}</a>
						</div>
					{% endif %}

					{% set tagList = (project.data.tagss or tags) | normalizeToArray %}
					{% if tagList | length %}
						<span>Tags:</span>
						<ul class="post-metadata">
							{%- for tag in tagList | filterTagList %}
								{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
								<li>#{{ tag }}</li>
							{%- endfor %}
						</ul>
					{% endif %}

					{% if project.data.websiteUrl %}
						<div>
							<span>Website:</span>
							<a href="{{ project.data.websiteUrl }}" target="_blank" rel="noopener noreferrer">Live Demo</a>
						</div>
					{% endif %}
				</div>
			</div>
		</li>
	{%- endfor %}
</ul>