---
layout: layouts/alt.njk
---
<h1>{{ title }}</h1>

<div class="project-metadata">
  <cluster-l style="--cluster-gap: var(--s1); --cluster-justify: flex-start">
    {% if iconLabel %}
      <span>{% icon iconLabel %}
        <a href="{{ iconUrl }}">{{ repoLabel }}</a>
      </span>
    {% endif %}

    <cluster-l style="--cluster-gap: var(--s0); --cluster-justify: flex-start" class="project-tags">
      {%- for tag in tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <a href="{{ tagUrl }}" class="post-tag">#{{ tag }}</a>
      {%- endfor %}
    </cluster-l>
  </cluster-l>
</div>

{{ content | safe }}

<hr/>

{%- if collections.projects %}
  {%- set previousProject = collections.projects | getPreviousCollectionItem %}
  {%- set nextProject = collections.projects | getNextCollectionItem %}
  {%- if nextProject or previousProject %}
    <ul class="links-nextprev">
      {%- if previousProject %}
        <li class="links-nextprev-prev">← Previous<br>
          <a href="{{ previousProject.url }}">{{
      previousProject.data.title }}</a>
        </li>
      {% endif %}
      {%- if nextProject %}
        <li class="links-nextprev-next">Next →<br>
          <a href="{{ nextProject.url }}">{{
      nextProject.data.title }}</a>
        </li>
      {% endif %}
    </ul>
  {%- endif %}
{%- endif %}