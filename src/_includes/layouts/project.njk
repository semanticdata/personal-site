---
layout: layouts/base.njk
---
<h1>{{ title }}</h1>

{# Prefer page.tags over directory data tags. Normalize string -> array #}
{% if page and page.tags %}
  {% set _src = page.tags %}
{% else %}
  {% set _src = tags %}
{% endif %}

{% if _src is string %}
  {% set tagList = [_src] %}
{% else %}
  {% set tagList = _src or [] %}
{% endif %}


<div class="project-metadata">
<span>Tags:</span>
<ul class="post-metadata">
    {# <li><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li> #}
    
    {%- for tag in tagList | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
    {%- endfor %}
</ul>

{% if iconLabel %}
<div>
  <span>Repository:</span>
  {% icon iconLabel %} <a href="{{ iconUrl }}">{{ repoLabel }}</a>
</div>
{% endif %}
</div>

{{ content | safe }}

{%- if collections.projects %}
{%- set previousProject = collections.projects | getPreviousCollectionItem %}
{%- set nextProject = collections.projects | getNextCollectionItem %}
{%- if nextProject or previousProject %}
<ul class="links-nextprev">
	{%- if previousProject %}<li class="links-nextprev-prev">← Previous<br> <a href="{{ previousProject.url }}">{{ previousProject.data.title }}</a></li>{% endif %}
	{%- if nextProject %}<li class="links-nextprev-next">Next →<br><a href="{{ nextProject.url }}">{{ nextProject.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
