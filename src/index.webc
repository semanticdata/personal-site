    letter-spacing: -0.02em;
  }

  .index-brutal-hero .subtitle {
    font-size: var(--step-2);
    font-family: var(--font-family-serif);
    font-style: italic;
  }

  .index-brutal-status small {
    color: var(--text-alt);
  }

  .index-brutal-status-dot {
    display: inline-block;
    inline-size: 0.5em;
    block-size: 0.5em;
    background-color: var(--text-emphasis);
    border-radius: 50%;
    margin-inline: var(--s-2);
  }

  .index-brutal-archive {
    font-size: var(--step-0);
  }
</style>
