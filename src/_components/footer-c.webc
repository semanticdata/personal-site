<footer class="footer stack">
  <ul class="footer-links cluster">
    <!--- We use (entry, index) to track the position for the dot separator --->
    <template webc:for="(entry, index) of $data.metadata.footer" webc:nokeep>
      <li>
        <a 
          :href="entry.url" 
          :target="entry.external ? '_blank' : null" 
          :rel="entry.external ? 'noopener noreferrer' : null"
          @text="entry.label"
        ></a>
      </li>
      <!--- Check if it's NOT the last item to show the dot --->
      <li 
        webc:if="index < $data.metadata.footer.length - 1" 
        aria-hidden="true"
      >Â·</li>
    </template>
  </ul>

  <div class="footer-gifs cluster">
    <template webc:for="entry of $data.metadata.gifs" webc:nokeep>
      <!-- If entry has a URL, wrap the shortcode in an anchor -->
      <a webc:if="entry.url" :href="entry.url">
        <template webc:nokeep @raw="this['88x31'](entry.gif, entry.alt)"></template>
      </a>
      
      <!-- Else, just render the shortcode -->
      <template 
        webc:else 
        webc:nokeep 
        @raw="this['88x31'](entry.gif, entry.alt)"
      ></template>
    </template>
  </div>
</footer>