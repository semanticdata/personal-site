<ol class="grid no-list" reversed>
  <li class="box" webc:for="post of posts">
    <div class="stack">
      <h3>
        <a :href="post.url" @text="post.data.title"></a>
      </h3>

      <p @text="post.data.description"></p>

      <div><time :datetime="post.date" @text="post.date.toDateString()"></time></div>
    </div>
  </li>
</ol>