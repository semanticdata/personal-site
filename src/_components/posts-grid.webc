<ol class="grid-intrinsic no-list" reversed data-columns="3">
  <li webc:for="post of posts">
    <div class="stack" style="--space: var(--s1)">
      <small class="post-grid-meta">
        <time :datetime="post.date" @text="post.date.toDateString()"></time>
      </small>
      <h3>
        <a :href="post.url" @text="post.data.title"></a>
      </h3>
      <p @text="post.data.description"></p>
    </div>
  </li>
</ol>